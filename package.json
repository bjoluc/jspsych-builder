{
  "name": "jspsych-builder",
  "version": "2.0.0",
  "description": "A CLI utility to easily develop and package jsPsych experiments",
  "author": "bjoluc <mail@bjoluc.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bjoluc/jspsych-builder.git"
  },
  "bugs": {
    "url": "https://github.com/bjoluc/jspsych-builder/issues"
  },
  "homepage": "https://github.com/bjoluc/jspsych-builder#readme",
  "main": "src/index.js",
  "files": [
    "src",
    "assets"
  ],
  "bin": {
    "jspsych": "src/index.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "test": "tests/story.js",
    "commit": "git-cz"
  },
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-transform-classes": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/register": "^7.12.13",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "core-js": "^3.8.3",
    "css-loader": "5.0.2",
    "deep-diff": "1.0.2",
    "del": "^6.0.0",
    "delay": "5.0.0",
    "execa": "5.0.0",
    "glob": "^7.1.6",
    "glob-promise": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-cached": "1.1.1",
    "gulp-file": "^0.4.0",
    "gulp-html-replace": "^1.6.2",
    "gulp-if": "^3.0.0",
    "gulp-inject": "^5.0.5",
    "gulp-load-plugins": "^2.0.6",
    "gulp-remove-empty-lines": "^0.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-template": "5.0.0",
    "gulp-zip": "^5.0.2",
    "import-cwd": "^3.0.0",
    "inquirer": "^7.3.3",
    "jest-docblock": "^26.0.0",
    "listr": "^0.14.3",
    "listr-silent-renderer": "1.1.1",
    "lodash": "4.17.21",
    "mini-css-extract-plugin": "1.3.6",
    "regenerator-runtime": "^0.13.7",
    "resolve-cwd": "^3.0.0",
    "sass": "1.32.7",
    "sass-loader": "^11.0.1",
    "slugify": "1.4.6",
    "update-notifier": "5.1.0",
    "uuid": "^8.3.2",
    "webpack": "5.21.2",
    "webpack-dev-server": "^3.11.2",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@bjoluc/semantic-release-config-npm": "^1.0.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "axios": "0.21.1",
    "commitizen": "4.2.3",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "semantic-release": "17.3.8",
    "shelljs": "0.8.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "scope-case": [
        0,
        "never",
        [
          "lower-case"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.js": [
      "prettier --write"
    ]
  },
  "release": {
    "extends": "@bjoluc/semantic-release-config-npm"
  }
}
